extends layout

block content
    div.container
        div.row
            div.col-md-3
                p
                a.text-left(href="/") << Back to home
        div.row
            h1.text-center Answer the following question
        div.row
            h4 Question: #{doc.question}
        div.row
            label Answer:
            input.form-control(type="text", id="answer")
            p
        div.row
            div.col-md-4
            div.col-md-2
                button.btn.btn-default(onclick='verify()') Submit
            div.col-md-2
                a.btn.btn-default(href="/quiz/next", role="button") Next Question
        p
        div.row
            -if(done)
                .alert.alert-info #{done}
        div.row.hidden(id="success")
            .alert.alert-success Correct
        div.row.hidden(id="failure")
            .alert.alert-danger Wrong. Correct Answer:  #{doc.answer}
    script.
        var verify = function() {
            if(document.getElementById("answer").value === "#{doc.answer}") {
                $("#success").removeClass('hidden')
                $("#failure").addClass('hidden');
            }
            else {
                $("#success").addClass('hidden');
                $("#failure").removeClass('hidden')
            }
        }