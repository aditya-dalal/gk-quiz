extends layout

block content
    div.container
        div.row
            div.col-md-3
                a.text-left(href="/") << Back to home
            div.col-md-6
                h1.text-center Submit a new question here
        div.row
            div.col-md-3
            div.col-md-6
                -if(success_message)
                    .alert.alert-success #{success_message}
                -if(error_message)
                    .alert.alert-danger #{error_message}
            div.col-md-3
        div.row
            form.form(action="/question", method="post", id="questionForm")
                div.row
                    div.col-md-3
                    label Question
                    textarea.span3(name="question", rows="4", cols="50", placeholder="Enter question")
                    p
                div.row
                    div.col-md-3
                    label Answer/s
                    textarea.span3(name="answer", rows="2", cols="50", placeholder="Enter comma separated answers")
                div.row
                    button.btn.btn-large.btn-primary.center-block(type="submit") Submit
                    //input.btn.btn-primary(type="submit") Submit

