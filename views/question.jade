doctype
html( lang="en" )
    head
        title Submit Question
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")

    body
        div.container
            div.row
                h1.text-center Submit a new question here
            div.row
                div.col-md-3
                div.col-md-6
                    -if(success_message)
                        .alert.alert-success #{success_message}
                    -if(error_message)
                        .alert.alert-danger #{error_message}
                div.col-md-3
            div.row
                form.form(action="/question", method="post", id="questionForm")
                    div.row
                        div.col-md-3
                        label Question
                        textarea.span3(name="question", rows="4", cols="50", placeholder="Enter question")
                        p
                    div.row
                        div.col-md-3
                        label Answer/s
                        textarea.span3(name="answer", rows="2", cols="50", placeholder="Enter comma separated answers")
                    div.row
                        button.btn.btn-large.btn-primary.center-block(type="submit") Submit
                        //input.btn.btn-primary(type="submit") Submit

    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
    script.
        $(document).ready (function(){
            $(".alert").fadeTo(2000, 500).slideUp(500, function(){
                $(".alert").alert('close');
            });
        });
